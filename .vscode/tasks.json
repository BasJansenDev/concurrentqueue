{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure CMake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".", 
        "-B", "build",
        "-G", "Ninja",
        "-DCMAKE_C_COMPILER=C:/msys64/mingw64/bin/clang.exe",
        "-DCMAKE_CXX_COMPILER=C:/msys64/mingw64/bin/clang++.exe",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
      ]
    },
    {
      "label": "Build All (library + tests)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "ctest",
      "args": [
        "--output-on-failure"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "test"
    }
  ]
}
